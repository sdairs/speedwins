---
import BaseLayout from "@layouts/BaseLayout.astro";

import { getCollection, getEntries } from "astro:content";

const tools = await getCollection("tools");
---

<BaseLayout>
  <h1 class="text-center mt-6">ðŸš€ Speed Wins ðŸš€</h1>
  <table class="table-fixed">
    <thead>
      <tr>
        <th>Category</th>
        <th>#1</th>
        <th>#2</th>
      </tr>
    </thead>
    <tbody>
      {
        tools.map((p) => {
          return (
            <tr>
              <td class="border">{p.data.title}</td>
              <td class="border">
                <a href={p.data.tools[0].url}>{p.data.tools[0].name}</a>
              </td>
              <td class="border">
                <a href={p.data.tools[1].url}>{p.data.tools[1].name}</a>
              </td>
            </tr>
          );
        })
      }
    </tbody>

    <style>
      td:first-child,
      th:first-child {
        border-left: none;
      }
      td:last-child,
      th:last-child {
        border-right: none;
      }
      tr:last-child {
        border-bottom: none;
      }
    </style>
  </table>
</BaseLayout>
